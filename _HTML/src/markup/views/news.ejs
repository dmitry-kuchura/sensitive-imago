<%
// alias текущего файлы
locals._activeFile = _getActiveFile(filename);
%>
<% include ../_config %>
<% layout('../layouts/main') %>
<div class="pageSection">
	<div class="pageSize">
		<% var Menu = [
			{
				text: 'Фото',
				url: 'gallery_photo',
				active: true
			}, {
				text: 'Видео',
				url: 'gallery_video'
			}
		];
		%>
		<div class="grid grid--nowrap">
			<div class="grid__cell">
				<%- partial('../widgets/pageAside', {Menu: Menus.about}) %>
			</div>
			<div class="grid__cell grid__cell--grow">
				<section class=" pageCenter">
					<%- Build.breadcrumbs() %>
					<div class="sectionTitle sectionTitle--inner">Новости</div>
					<div class="grid grid--2 grid--space-x2">
						<% var news = [
							'диагностика с помощью Сенситив имаго',
							'Доступна новая усгула',
							'Онлайн обучение с прибором сенситив имаго',
							'Оборудование получило золотую медаль',
							'Онлайн обучение с прибором сенситив имаго',
							'Оборудование получило золотую медаль'
						]
						%>
						<% news.forEach(function(el,i){  %>
						<div class="grid__cell">
							<div class="mediaBlock mediaBlock--air">
								<div class="mediaBlock__image"
									 style="background-image: url('images/news<%= ++i %>.jpg');">
									<div class="mediaBlock__date">
										22
										<small>фев</small>
									</div>
								</div>
								<div class="mediaBlock__content">
									<div class="mediaBlock__title"><%= el %></div>
									<div class="mediaBlock__text">
										<div class="mediaBlock__textInner">
											Медицинское лечебно-диагностическое оборудование предназначено для
											неинвазивного
											комплексного
										</div>
									</div>
									<a href="news_one.html" class="button button--inverse">Подробнее</a>
								</div>
							</div>
						</div>
						<% }) %>
					</div>
					<%- Build.pagination(7, true) %>
				</section>
			</div>
		</div>

	</div>
</div>
<%- partial('../widgets/devices', {'color_inverse': false}) %>
